<div id="overview" class="content-section active">
  <div class="card mb-4">
    <div class="card-body">
      <div class="profile-header">
        <img
          src=""
          alt="Profile Picture"
          id="profile-picture"
          class="profile-picture"
        />
        <div class="profile-actions">
          <button
            onclick="document.getElementById('profile-img').click()"
            class="btn-outline"
          >
            <i class="bi bi-camera"></i>
            Change
          </button>
          <input
            type="file"
            id="profile-img"
            class="form-control"
            accept="image/png, image/jpeg, image/jpg"
            hidden
          />
          <!-- <button class="btn-outline">
                        <i class="bi bi-trash"></i>
                        Remove
                    </button> -->
        </div>
      </div>

      <h5 class="card-title">Profile Information</h5>
      <p class="card-text">Update your personal and professional information</p>

      <form id="profileForm" method="POST">
        <div class="row">
          <div class="col-md-6 form-group">
            <label for="firstName" class="form-label">First Name</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              value="<%= user.first_name %>"
              placeholder="Enter your first name"
              disabled
            />
          </div>
          <div class="col-md-6 form-group">
            <label for="middleName" class="form-label">Middle Name</label>
            <input
              type="text"
              class="form-control"
              id="middleName"
              name="middleName"
              value="<%= user.middle_name %>"
              placeholder="Enter your middle name"
              disabled
            />
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 form-group">
            <label for="lastName" class="form-label">Last Name</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              value="<%= user.last_name %>"
              placeholder="Enter your last name"
              disabled
            />
          </div>
          <div class="col-md-6 form-group">
            <label for="position" class="form-label">Current Position</label>
            <input
              type="text"
              class="form-control"
              name="position"
              id="position"
              placeholder="Enter your current position"
              disabled
            />
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 form-group">
            <label for="department" class="form-label">Department</label>
            <select
              name="department"
              id="departmentDropdown"
              class="form-control"
              disabled
            >
              <!-- Options will be populated by JavaScript -->
            </select>
          </div>
          <div class="col-md-6 form-group">
            <label for="honorifics" class="form-label">Honorifics</label>
            <select class="form-control" id="honorifics" name="honorifics">
              <option value="">-- Select --</option>
            
              <option value="Mr." <%= user.honorifics === "Mr." ? "selected" : "" %>>Mr.</option>
              <option value="Mrs." <%= user.honorifics === "Mrs." ? "selected" : "" %>>Mrs.</option>
              <option value="Ms." <%= user.honorifics === "Ms." ? "selected" : "" %>>Ms.</option>
              <option value="Miss" <%= user.honorifics === "Miss" ? "selected" : "" %>>Miss</option>
              <option value="Mx." <%= user.honorifics === "Mx." ? "selected" : "" %>>Mx.</option>
            
              <option value="Dr." <%= user.honorifics === "Dr." ? "selected" : "" %>>Dr.</option>
              <option value="Prof." <%= user.honorifics === "Prof." ? "selected" : "" %>>Prof.</option>
              <option value="Assoc. Prof." <%= user.honorifics === "Assoc. Prof." ? "selected" : "" %>>Assoc. Prof.</option>
              <option value="Asst. Prof." <%= user.honorifics === "Asst. Prof." ? "selected" : "" %>>Asst. Prof.</option>
              <option value="PhD" <%= user.honorifics === "PhD" ? "selected" : "" %>>PhD</option>
            
              <option value="Engr." <%= user.honorifics === "Engr." ? "selected" : "" %>>Engr.</option>
              <option value="Atty." <%= user.honorifics === "Atty." ? "selected" : "" %>>Atty.</option>
              <option value="Arch." <%= user.honorifics === "Arch." ? "selected" : "" %>>Arch.</option>
              <option value="CPA" <%= user.honorifics === "CPA" ? "selected" : "" %>>CPA</option>
              <option value="Hon." <%= user.honorifics === "Hon." ? "selected" : "" %>>Hon.</option>
              <option value="Capt." <%= user.honorifics === "Capt." ? "selected" : "" %>>Capt.</option>
              <option value="Chief" <%= user.honorifics === "Chief" ? "selected" : "" %>>Chief</option>
              <option value="Sr." <%= user.honorifics === "Sr." ? "selected" : "" %>>Sr.</option>
              <option value="Jr." <%= user.honorifics === "Jr." ? "selected" : "" %>>Jr.</option>
            </select>
            
          </div>
        </div>

        <div class="form-group">
          <label for="researchFields" class="form-label">Research Fields</label>
          <input
            type="text"
            class="form-control"
            id="researchFields"
            name="researchFields"
            placeholder="Enter your research fields here..."
          />
        </div>

        <div class="form-group">
          <label for="introduction" class="form-label">Introduction</label>
          <textarea
            class="form-control description-field"
            name="introduction"
            id="introduction"
            placeholder="Write a brief introduction about yourself"
            maxlength="1000"
          ></textarea>
        </div>

        <div class="d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-custom" id="saveProfile">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

