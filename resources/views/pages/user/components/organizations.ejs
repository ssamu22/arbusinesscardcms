<div id="organizations" class="content-section card">
    <h2 class="mb-4" style="color:#9b3838">Organizations</h2>

    <!-- Filter and Add Organization button in a row -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Filter Dropdown on the left -->
        <div class="d-flex align-items-center">
            <label for="org-type-filter" class="form-label me-2 mb-0">Filter by Type:</label>
            <select id="org-type-filter" class="form-select" style="width: 200px;">
                <option value="all" selected>All</option>
                <option value="professional">Professional</option>
                <option value="civic">Civic</option>
            </select>
        </div>

        <!-- Add Organization Button on the right -->
        <button id="add-org-btn" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orgModal">Add Organization</button>
    </div>

    <!-- Organization list container -->
    <div id="org-list" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Organizations will be dynamically added here -->
    </div>

    <!-- Modal for adding an organization -->
    <div class="modal fade" id="orgModal" tabindex="-1" aria-labelledby="orgModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="orgModalLabel" class="modal-title">Add Organization</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="org-form">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="org-name" class="form-label">Organization Name</label>
                            <input type="text" id="org-name" class="form-control" maxlength="100" placeholder="Enter organization name..." required>
                        </div>
                        <div class="mb-3">
                            <label for="org-type" class="form-label">Type</label>
                            <select id="org-type" class="form-select">
                                <option value="professional">Professional</option>
                                <option value="civic">Civic</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="org-category" class="form-label">Category</label>
                            <input type="text" id="org-category" class="form-control" placeholder="(e.g. Coding Bootcamps, Educational, etc..)" maxlength="50">
                        </div>
                        <div class="mb-3">
                            <label for="org-position" class="form-label">Position</label>
                            <input type="text" id="org-position" class="form-control" placeholder="Enter your organization position..." maxlength="50">
                        </div>
                        <div class="mb-3">
                            <label for="org-date-joined" class="form-label">Date Joined</label>
                            <select id="org-date-joined" class="form-select year-dropdown" required></select>
                        </div>
                        <div class="mb-3">
                            <label for="org-date-active" class="form-label">Date Active</label>
                            <select id="org-date-active" class="form-select year-dropdown" required>
                                <option value="present">Present</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="org-description" class="form-label">Description</label>
                            <textarea id="org-description" class="form-control" rows="3" placeholder="Write a brief description about the organization" maxlength="500"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="org-image" class="form-label">Upload Logo</label>
                            <input type="file" id="org-image" class="form-control" accept="image/png, image/jpeg, image/jpg">
                        </div>
                        <div class="mb-3">
                            <label for="org-banner" class="form-label">Upload Banner</label>
                            <input type="file" id="org-banner" class="form-control" accept="image/png, image/jpeg, image/jpg">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="submit-btn" class="btn btn-primary">Add Organization</button>
                    </div>
                </form>
            </div>
        </div>
    </div>    
</div>
