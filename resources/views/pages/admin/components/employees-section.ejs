  <!-- Modal -->
  <div id="userModal" class="modal">
    <div class="modal-content">
      <button class="close-btn" style="background: none; border: none">
        &times;
      </button>
      <h2 id="create-modal-header">Invite an Employee</h2>
      <form id="userForm">
        <div class="form-group">
          <label for="fname">First Name</label>
          <input
            type="text"
            id="fname"
            name="fname"
            placeholder="Enter first name"
            class="new-user-input"
            required
          />
        </div>
        <div class="form-group">
          <label for="mname">Middle Name (Optional)</label>
          <input
            type="text"
            id="mname"
            name="mname"
            placeholder="Enter middle name"
            class="new-user-input"
          />
        </div>
        <div class="form-group">
          <label for="lname">Last Name</label>
          <input
            type="text"
            id="lname"
            name="lname"
            placeholder="Enter last name"
            class="new-user-input"
            required
          />
        </div>

        <div class="form-group">
          <label for="employee_number">Employee Number</label>
          <input
            type="text"
            id="employee_number"
            name="employee_number"
            placeholder="Enter employee number"
            required
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter email address"
            class="new-user-input"
            required
          />
        </div>

        <div class="form-group">
          <label for="honorifics">Honorifics</label>
          <select
            class="form-control new-honorifics-input"
            id="honorifics"
            name="honorifics"
            class="new-user-input"
          >
            <option value="">-- Select --</option>

            <!-- Common Titles -->
            <option value="Mr.">Mr.</option>
            <option value="Mrs.">Mrs.</option>
            <option value="Ms.">Ms.</option>
            <option value="Miss">Miss</option>
            <option value="Mx.">Mx.</option>

            <!-- Academic Titles -->
            <option value="Dr.">Dr.</option>
            <option value="Prof.">Prof.</option>
            <option value="Assoc. Prof.">Assoc. Prof.</option>
            <option value="Asst. Prof.">Asst. Prof.</option>
            <option value="PhD">PhD</option>

            <!-- Professional Titles -->
            <option value="Engr.">Engr.</option>
            <option value="Atty.">Atty.</option>
            <option value="Arch.">Arch.</option>
            <option value="CPA">CPA</option>
            <option value="Hon.">Hon.</option>
            <option value="Capt.">Capt.</option>
            <option value="Chief">Chief</option>
            <option value="Sr.">Sr.</option>
            <option value="Jr.">Jr.</option>
          </select>
        </div>
        <button type="submit" id="create-user-btn" class="btn btn-success">
          Save
        </button>
      </form>

      <form id="newAdminForm">
        <div class="form-group">
          <label for="new-admin-name">Admin Name</label>
          <input
            type="text"
            id="new-admin-name"
            name="admin_name"
            placeholder="Enter Admin Name"
            class="new-admin-input"
            required
          />
        </div>

        <div class="form-group">
          <label for="new-admin-name">Employee Number</label>
          <input
            type="text"
            id="admin-employee-number"
            name="employee_number"
            placeholder="Enter Employee Number"
            class="new-admin-input"
            required
          />
        </div>

        <div class="form-group">
          <label for="new-admin-name">Admin Type</label>
          <select
            name="admin_type"
            id="admin-type"
            class="new-admin-input"
            required
          >
            <option value="0" selected>-- Select --</option>
            <option value="human_resources">Human Resources</option>
            <option value="center_for_public_affairs">
              Center for Public Affairs
            </option>
          </select>
        </div>

        <div class="form-group">
          <label for="new-admin-email">Email</label>
          <input
            type="email"
            id="new-admin-email"
            name="email"
            placeholder="Enter email address"
            class="new-admin-input"
            required
          />
        </div>

        <button type="submit" id="create-admin-btn" class="btn btn-success">
          Save
        </button>
      </form>
    </div>
  </div>
</section>
