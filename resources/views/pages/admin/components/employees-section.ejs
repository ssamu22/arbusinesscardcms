<section id="members-section" class="members-section">
  <div class="confirm-delete-overlay" id="confirm-delete-overlay">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      height="30px"
      viewBox="0 -960 960 960"
      width="30px"
      fill="#e3e3e3"
      class="close-delete-overlay"
    >
      <path
        d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"
      />
    </svg>

    <div class="delete-employee-div">
      <p>Are you sure you want to delete this employee?</p>
      <button class="confirm-delete-btn" id="delete-yes-btn">Yes</button>
      <button class="confirm-delete-btn" id="delete-no-btn">No</button>
    </div>
  </div>

  <div class="members-header">
    <h2>Members</h2>

    <div>
      <button class="add-member-btn" id="openModal">
        <i class="fas fa-plus"></i> Add Member
      </button>
      <button class="add-admin-btn" id="openAdminModal">Add Admin</button>
    </div>
  </div>
  <!-- <div class="members-actions">
    <div class="search-bar">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Search members..." />
    </div>
    <button class="filter-btn"><i class="fas fa-filter"></i> Filter</button>
  </div> -->
  <table class="members-table">
    <thead>
      <tr>
        <th>No</th>
        <th>Members</th>
        <th>Joined</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="activeMembersTableBody">
      <!-- Dummy data will be inserted here by JavaScript -->
    </tbody>
  </table>
  <div class="pagination">
    <div class="pagination-info-active">
      Showing <span></span> to <span></span> of <span></span> results
    </div>
    <div class="pagination-buttons">
      <a href="#" class="prev-page-members"
        ><i class="fas fa-chevron-left"></i
      ></a>
      <div class="number-buttons-active"></div>
      <a href="#" class="next-page-members"
        ><i class="fas fa-chevron-right"></i
      ></a>
    </div>
  </div>

  <!-- INACTIVE MEMBERS SECTION -->
  <section id="members-section" class="members-section">
    <div class="members-header">
      <h2>For Approval</h2>
      <button class="approve-member-btn" id="openModal">
        <i></i> Approve All
      </button>
    </div>

    <table class="members-table">
      <thead>
        <tr>
          <th>No</th>
          <th>Members</th>
          <th>Joined</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="inactiveMembersTableBody">
        <!-- Dummy data will be inserted here by JavaScript -->
      </tbody>
    </table>
    <div class="pagination">
      <div class="pagination-info-inactive">
        Showing <span></span> to <span></span> of <span></span> results
      </div>
      <div class="pagination-buttons">
        <a class="prev-page-approval"><i class="fas fa-chevron-left"></i></a>
        <div class="number-buttons-inactive"></div>
        <a class="next-page-approval"><i class="fas fa-chevron-right"></i></a>
      </div>
    </div>
  </section>

  <!-- Modal -->
  <div id="userModal" class="modal">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <h2 id="create-modal-header">Create New User</h2>
      <form id="userForm">
        <div class="form-group">
          <label for="fname">First Name</label>
          <input
            type="text"
            id="fname"
            name="fname"
            placeholder="Enter first name"
            required
          />
        </div>
        <div class="form-group">
          <label for="mname">Middle Name (Optional)</label>
          <input
            type="text"
            id="mname"
            name="mname"
            placeholder="Enter middle name"
          />
        </div>
        <div class="form-group">
          <label for="lname">Last Name</label>
          <input
            type="text"
            id="lname"
            name="lname"
            placeholder="Enter last name"
            required
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter email address"
            required
          />
        </div>

        <div class="form-group">
          <label for="honorifics">Honorifics</label>
          <select
            class="form-control new-honorifics-input"
            id="honorifics"
            name="honorifics"
          >
            <option value="">-- Select --</option>

            <!-- Common Titles -->
            <option value="Mr.">Mr.</option>
            <option value="Mrs.">Mrs.</option>
            <option value="Ms.">Ms.</option>
            <option value="Miss">Miss</option>
            <option value="Mx.">Mx.</option>

            <!-- Academic Titles -->
            <option value="Dr.">Dr.</option>
            <option value="Prof.">Prof.</option>
            <option value="Assoc. Prof.">Assoc. Prof.</option>
            <option value="Asst. Prof.">Asst. Prof.</option>
            <option value="PhD">PhD</option>

            <!-- Professional Titles -->
            <option value="Engr.">Engr.</option>
            <option value="Atty.">Atty.</option>
            <option value="Arch.">Arch.</option>
            <option value="CPA">CPA</option>
            <option value="Hon.">Hon.</option>
            <option value="Capt.">Capt.</option>
            <option value="Chief">Chief</option>
            <option value="Sr.">Sr.</option>
            <option value="Jr.">Jr.</option>
          </select>
        </div>
        <button type="submit" id="create-user-btn" class="btn btn-success">
          Save
        </button>
      </form>

      <form id="newAdminForm">
        <div class="form-group">
          <label for="new-admin-name">New Admin Name</label>
          <input
            type="text"
            id="new-admin-name"
            name="admin_name"
            placeholder="Enter Admin Name"
            required
          />
        </div>

        <div class="form-group">
          <label for="new-admin-email">Email</label>
          <input
            type="email"
            id="new-admin-email"
            name="email"
            placeholder="Enter email address"
            required
          />
        </div>

        <button type="submit" id="create-admin-btn" class="btn btn-success">
          Save
        </button>
      </form>
    </div>
  </div>
</section>
