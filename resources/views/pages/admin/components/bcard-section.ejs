      <br />
      <div>
        <canvas id="canvas" width="800" height="450"></canvas>
        <div class="bcard-bg-btn">
          <input type="file" accept=".jpg, .jpeg, .png" id="bcard-bg" />
          <label class="bcard-bg-label" for="bcard-bg">Upload Background</label>
          <button id="save-bg-btn">Save Background</button>
          <button type="button" id="generate-bcard-btn">
            Generate & Replace
          </button>
          <button type="button" id="download-bcard" style="display: none">
            Download Business Card
          </button>
        </div>
      </div>
    </div>

    <div class="text-options" id="text-options">
      <label for="text-content">Text:</label>
      <input type="text" id="text-content" name="text-content" disabled />
      <label for="text-font">Font Family:</label>
      <select id="text-font" name="text-font" disabled>
        <option value="Arial">Arial</option>
        <option value="Verdana">Verdana</option>
        <option value="Times New Roman">Times New Roman</option>
        <option value="Georgia">Georgia</option>
        <option value="Courier New">Courier New</option>
        <option value="Tahoma">Tahoma</option>
        <option value="Trebuchet MS">Trebuchet MS</option>
        <option value="Impact">Impact</option>
        <option value="Comic Sans MS">Comic Sans MS</option>
        <option value="Lucida Console">Lucida Console</option>
        <option value="Garamond">Garamond</option>
        <option value="Palatino Linotype">Palatino Linotype</option>
      </select>

      <label for="scaleFactor" style="display: none">Scale Factor:</label>
      <input
        type="number"
        id="scaleFactor"
        name="scaleFactor"
        value="1"
        step="0.1"
        disabled
        style="display: none"
      /><br />

      <label for="fontSize">Font Size:</label>
      <input
        type="number"
        id="fontSize"
        name="fontSize"
        min="8"
        value="16"
        disabled
      /><br />

      <label for="fontWeight">Font Weight:</label>
      <input
        type="number"
        id="fontWeight"
        name="fontWeight"
        value="100"
        min="100"
        max="900"
        step="100"
        disabled
      /><br />

      <label for="textAlignment">Text Alignment:</label>
      <select id="textAlignment">
        <option value="left">Left</option>
        <option value="center">Center</option>
        <option value="right">Right</option>
        <option value="start">Start</option>
        <option value="end">End</option>
      </select>
      <!-- <label for="textBaseline">Text Baseline:</label>
