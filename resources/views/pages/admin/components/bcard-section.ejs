        <option value="bottom">Bottom</option>
      </select> -->

      <label for="color">Color:</label>
      <input
        type="color"
        id="color"
        name="color"
        value="#008000"
        disabled
      /><br />

      <div id="contextMenu" class="context-menu">
        <button id="delete-text-btn">Delete</button>
      </div>
      <button type="button" id="apply-btn" style="display: none">Apply</button>
    </div>
  </div>

