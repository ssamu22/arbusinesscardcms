<section id="bcards-section" class="bcards-section">
  <div class="bcard-section-content">
    <div class="bcard-section-canvas">
      <h2 class="section-title">Business Card Template</h2>
      <input
        id="theText"
        type="text"
        placeholder="Enter text here"
        style="display: none"
      />
      <button id="submit-new-text" class="draw-text-btn" style="display: none">
        Draw text on canvas
      </button>
      <button class="clear-btn" id="clear-btn" style="display: none">
        Clear
      </button>
      <button class="highlight-name-btn" id="highlight-name-btn">
        Center Name
      </button>
      <button class="highlight-empnumber-btn" id="highlight-empnumber-btn">
        Center Employee Number
      </button>
