<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ARCMS Admin Login</title>
    <link rel="icon" href="/images/lpu_logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      /* Main styles from design.html */
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
      }
      
      .main-container {
        min-height: 100vh;
        background-image: url('/images/background.png');
        background-size: cover;
        background-position: center;
      }
      
      /* Left side with welcome message */
      .welcome-section {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 100vh;
      }
      
      .welcome-content {
        max-width: 500px;
        margin: 0 auto;
      }
      
      .brand-name {
        color: #dc3545;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 1rem;
      }
      
      .welcome-title {
        font-size: 3rem;
        font-weight: 300;
        margin-bottom: 1.5rem;
      }
      
      .welcome-text {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        opacity: 0.9;
      }
      
      /* Form section styles */
      .form-section {
        background-color: rgba(255, 255, 255, 0.95);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }
      
      .form-container {
        width: 100%;
        max-width: 450px;
        padding: 2rem;
      }
      
      /* ERROR MESSAGE STYLES */
      #error-message.alert-danger {
        background-color: rgba(220, 53, 69, 0.1);
        color: #dc3545;
        border-color: #dc3545;
        border-radius: 6px;
        padding: 12px 15px;
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
      }
      
      /* Form control styles */
      .form-control {
        padding: 0.75rem 1rem;
        border-radius: 6px;
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        color: #212529;
      }
      
      .form-control:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
      }
      
      .form-label {
        color: #495057;
        font-weight: 500;
        margin-bottom: 0.5rem;
      }
      
      /* Button styles */
      .btn-login {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        font-weight: 500;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        width: 100%;
        transition: all 0.2s;
      }
      
      .btn-login:hover {
        background-color: #c82333;
        border-color: #bd2130;
      }
      
      /* Links */
      .forgot-password {
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
        display: inline-block;
        margin-bottom: 1rem;
      }
      
      .forgot-password:hover {
        color: #dc3545;
        text-decoration: underline;
      }
      
      /* Admin specific styles */
      .admin-badge {
        display: inline-block;
        background-color: #dc3545;
        color: white;
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        margin-left: 0.5rem;
        vertical-align: middle;
      }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        .welcome-section {
          min-height: auto;
          padding: 2rem;
        }
        
        .form-section {
          min-height: auto;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid p-0 main-container">
      <div class="row g-0">
        <!-- Left side with welcome message -->
        <div class="col-md-5 welcome-section">
          <div class="welcome-content">
            <h1 class="brand-name">ARCMS</h1>
            <h2 class="welcome-title">Admin Portal</h2>
            <p class="welcome-text">
              Manage your content with ease. Access advanced features and control
              your website efficiently.
            </p>
          </div>
        </div>
        
        <!-- Right side with admin login form -->
        <div class="col-md-7 form-section">
          <div class="form-container">
            <h2 class="text-center mb-4">
              Admin Login
              <span class="admin-badge">Restricted</span>
            </h2>
            <div
              id="error-message"
              class="alert alert-danger d-none"
              role="alert"
            ></div>
            <form id="login-form">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                />
              </div>
              <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  required
                />
              </div>
              <a href="/admin/forgot-admin-password" class="forgot-password">Forgot your password?</a>
              <button type="submit" class="btn-login">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>

      document.addEventListener("contextmenu", function (e) {
        e.preventDefault();
      });
      
      document
        .getElementById("login-form")
        .addEventListener("submit", async function (event) {
          event.preventDefault();
          const loginBtn = document.querySelector(".btn-login");
          loginBtn.textContent = "Logging in...";
          loginBtn.disabled = true;
          const errorElement = document.getElementById("error-message");
          errorElement.textContent = "";
          errorElement.classList.add("d-none");

          const formData = new FormData(this);
          const data = Object.fromEntries(formData);

          try {
            const response = await fetch("/arcms/api/v1/auth/admin/login", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data),
            });

            if (response.ok) {
              window.location.href = "/admin/home";
              loginBtn.textContent = "Login";
            } else {
              if (response.status === 401) {
                const result = await response.json();
                displayError(result.message || "Invalid email or password.");
                loginBtn.textContent = "Login";
              } else {
                throw new Error("Unexpected server response.");
              }
            }
          } catch (error) {
            displayError("An error occurred. Please try again later.");
            console.error("Login error:", error);
          }
          loginBtn.disabled = false;
        });

      function displayError(message) {
        const errorElement = document.getElementById("error-message");
        errorElement.textContent = message;
        errorElement.classList.remove("d-none");
      }
    </script>
  </body>
</html>