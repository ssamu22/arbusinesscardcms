<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ARCMS Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #2a1f30 0%, #5d1b4c 100%);
        background-image: url("/images/background.png");
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .reset-input-div {
        display: flex;
        flex-direction: column;
        gap: 20px;
      }

      #reset-success-div {
        display: none;
      }

      .submit-btn,
      .cancel-btn {
        background: #a3202b;
        color: white;
        border-radius: 5px;
        border: none;
        padding: 8px;
        padding-inline: 20px;
      }

      .cancel-btn {
        background: #e5e5e5;
        color: black;
      }

      .reset-container {
        width: 500px;
        background: linear-gradient(
          rgba(255, 255, 255, 0.1),
          rgba(0, 0, 0, 0.5)
        );
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 2rem;
        max-width: 1000px;
        display: flex;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      }

      .left-section {
        flex: 1;
        padding: 2rem;
        color: white;
      }

      .right-section {
        flex: 1;
        padding: 2rem;
      }

      .reset-password {
        border: none;
        padding: 8px;
        border-radius: 5px;
        width: 100%;
      }
      .brand {
        font-size: 2.1rem;
        font-weight: bold;
        margin-bottom: 1rem;
        background: white;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .welcome-text {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
        color: white;
      }

      .tagline {
        font-size: 1.1rem;
        margin-bottom: 2rem;
        opacity: 0.8;
      }

      .social-icons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
      }

      .social-icons i {
        color: white;
        font-size: 1.5rem;
        opacity: 0.7;
        transition: opacity 0.3s;
      }

      .social-icons i:hover {
        opacity: 1;
      }

      .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.8rem;
      }

      .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        color: white;
        box-shadow: none;
      }

      .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6);
      }

      .form-label {
        color: white;
      }

      .btn-login {
        background: linear-gradient(45deg, #a3202b, rgb(255, 63, 63));
        border: none;
        color: white;
        padding: 0.8rem;
        border-radius: 5px;
        width: 100%;
        font-weight: 600;
        margin-top: 1rem;
        transition: transform 0.3s;
      }

      .btn-login:hover {
        transform: translateY(-2px);
        background: linear-gradient(45deg, #a3202b, rgb(255, 63, 63));
      }

      .auth-links {
        display: flex;
        justify-content: space-between;
        margin-top: 1rem;
      }

      .auth-links a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-size: 0.9rem;
      }

      .auth-links a:hover {
        color: white;
      }

      @media (max-width: 768px) {
        .reset-container {
          width: 80%;
          flex-direction: column;
          width: 90%;
        }

        .left-section {
          padding: 1rem;
          text-align: center;
        }

        .right-section {
          padding: 1rem;
        }
      }

      .forgot-pword-header {
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="reset-container">
      <div class="left-section">
        <form id="passwordResetForm">
          <div class="brand">
            <p class="forgot-pword-header">Reset password</p>
          </div>
          <p>Enter your new password.</p>
          <div class="reset-input-div">
            <input
              type="password"
              name="reset-password"
              id="reset-password"
              class="reset-password"
              placeholder="New Password"
            />
            <input
              type="password"
              name="confirm-reset-password"
              id="confirm-password"
              class="reset-password"
              placeholder="Confirm New Password"
            />
            <button class="submit-btn">Submit</button>
          </div>
        </form>

        <div id="reset-success-div">
          <div class="brand">
            <p class="forgot-pword-header">Password Reset Successful!</p>
          </div>
          <p>
            You have successfully reset your password. Please
            <a href="/login">log in</a> to your account to continue.
          </p>
        </div>
      </div>
    </div>

    <script>
      const userEmail = "<%= email %>";
      const userId = "<%= id %>";

      const passwordResetForm = document.getElementById("passwordResetForm");
      const passwordResetSuccess = document.getElementById("reset-success-div");
      passwordResetForm.addEventListener("submit", async (e) => {
        e.preventDefault();

        await fetch(`/arcms/api/v1/employees/reset-password/${userId}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            password: e.target["reset-password"].value,
            passwordConfirm: e.target["confirm-reset-password"].value,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.status == "failed") {
              return alert(data.message);
            }

            passwordResetForm.style.display = "none";
            passwordResetSuccess.style.display = "block";
            console.log(data);
          })
          .catch((err) => {
            console.log("ERROR RESETTING PASSWORD:", err);
          });
      });
    </script>
  </body>
</html>
