<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ARCMS - Reset Password</title>
    <link rel="icon" href="/images/lpu_logo_icon.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      /* Main styles from design.html */
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
      }
      
      .main-container {
        min-height: 100vh;
        background-image: url('/images/background.png');
        background-size: cover;
        background-position: center;
      }
      
      /* Left side with welcome message */
      .welcome-section {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 100vh;
      }
      
      .welcome-content {
        max-width: 500px;
        margin: 0 auto;
      }
      
      .brand-name {
        color: #dc3545;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 1rem;
      }
      
      .welcome-title {
        font-size: 3rem;
        font-weight: 300;
        margin-bottom: 1.5rem;
      }
      
      .welcome-text {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        opacity: 0.9;
      }
      
      /* Form section styles */
      .form-section {
        background-color: rgba(255, 255, 255, 0.95);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }
      
      .form-container {
        width: 100%;
        max-width: 450px;
        padding: 2rem;
      }
      
      /* Preserve original classes and add new styling */
      .reset-container {
        width: 100%;
        max-width: 100%;
        background: none;
        backdrop-filter: none;
        border: none;
        padding: 0;
        box-shadow: none;
        display: block;
      }
      
      .reset-input-div {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 1.5rem;
        max-width: 350px; /* Reduced width for better visuals */
        margin-left: auto;
        margin-right: auto;
      }
      
      .reset-password {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        color: #212529;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      }
      
      .reset-password:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
        outline: none;
        transform: translateY(-2px);
      }
      
      .submit-btn {
        background: linear-gradient(45deg, #a3202b, #dc3545);
        color: white;
        font-weight: 600;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        width: 100%;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(220, 53, 69, 0.2);
        position: relative;
        overflow: hidden;
        z-index: 1;
      }
      
      .submit-btn:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, #dc3545, #a3202b);
        transition: all 0.4s ease;
        z-index: -1;
      }
      
      .submit-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(220, 53, 69, 0.3);
      }
      
      .submit-btn:hover:before {
        left: 0;
      }
      
      .submit-btn:active {
        transform: translateY(-1px);
        box-shadow: 0 3px 6px rgba(220, 53, 69, 0.2);
      }
      
      .cancel-btn {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        font-weight: 500;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        width: 100%;
        transition: all 0.2s;
        border: none;
        margin-top: 0.5rem;
      }
      
      .cancel-btn:hover {
        background-color: #5a6268;
      }
      
      /* Success message styling */
      #reset-success-div {
        display: none;
        text-align: center;
        max-width: 350px;
        margin: 0 auto;
        animation: fadeIn 0.5s ease-in-out;
      }
      
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      #reset-success-div .forgot-pword-header {
        color: #28a745;
        font-size: 1.75rem;
        margin-bottom: 1rem;
      }
      
      #reset-success-div p {
        color: #212529;
        margin-bottom: 1.5rem;
        line-height: 1.5;
      }
      
      #reset-success-div a {
        color: #dc3545;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
      }
      
      #reset-success-div a:hover {
        text-decoration: underline;
      }
      
      .brand {
        margin-bottom: 1rem;
        text-align: center;
      }
      
      .forgot-pword-header {
        font-size: 1.75rem;
        font-weight: 600;
        color: #212529;
        margin-bottom: 0.5rem;
      }
      
      /* Password strength indicator */
      .password-strength {
        height: 5px;
        margin-top: -15px;
        margin-bottom: 15px;
        border-radius: 5px;
        transition: all 0.3s ease;
        background: #e9ecef;
        overflow: hidden;
        position: relative;
      }
      
      .strength-meter {
        height: 100%;
        width: 0;
        border-radius: 5px;
        transition: all 0.3s ease;
      }
      
      .weak { width: 33%; background-color: #dc3545; }
      .medium { width: 66%; background-color: #ffc107; }
      .strong { width: 100%; background-color: #28a745; }
      
      /* Password requirements */
      .password-requirements {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: -10px;
        margin-bottom: 15px;
      }
      
      .password-requirements ul {
        padding-left: 1.5rem;
        margin-bottom: 0;
      }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        .welcome-section {
          min-height: auto;
          padding: 2rem;
        }
        
        .form-section {
          min-height: auto;
        }
        
        .reset-input-div {
          max-width: 100%;
        }
        
        #reset-success-div {
          max-width: 100%;
        }
      }
            .logo-container {
  margin-bottom: 1.5rem;
}

.logo-image {
  max-width: 120px;
  height: auto;
}
    </style>
  </head>
  <body>
    <div class="container-fluid p-0 main-container">
      <div class="row g-0">
        <!-- Left side with welcome message -->
        <div class="col-md-5 welcome-section">
          <div class="welcome-content">
                        <div class="logo-container">
  <img src="/images/lpu_logo_icon.png" alt="LPU Logo" class="logo-image">
</div>
            <h1 class="brand-name">ARCMS</h1>
            <h2 class="welcome-title">New Password</h2>
            <p class="welcome-text">
              Create a strong, secure password to protect your account. Make sure to use a combination of letters, numbers, and special characters.
            </p>
            <div class="d-flex align-items-center mt-4">
              <i class="bi bi-shield-lock-fill me-3" style="font-size: 2rem; color: #dc3545;"></i>
              <p class="mb-0">Your security is our priority. We recommend using a unique password that you don't use for other accounts.</p>
            </div>
          </div>
        </div>
        
        <!-- Right side with form -->
        <div class="col-md-7 form-section">
          <div class="form-container reset-container">
            <!-- Password reset form -->
            <form id="passwordResetForm" class="text-center">
              <div class="brand">
                <i class="bi bi-key-fill text-danger mb-3" style="font-size: 2.5rem;"></i>
                <p class="forgot-pword-header">Reset Password</p>
              </div>
              <p class="mb-4">Enter your new password below</p>
              <div class="reset-input-div">
                <div class="position-relative">
                  <input
                    type="password"
                    name="reset-password"
                    id="reset-password"
                    class="reset-password"
                    placeholder="New Password"
                  />
                  <div class="password-strength">
                    <div class="strength-meter"></div>
                  </div>
                </div>
                
                <div class="password-requirements">
                  <ul>
                    <li>At least 8 characters</li>
                    <li>Include uppercase & lowercase letters</li>
                    <li>Include at least one number and special character</li>
                  </ul>
                </div>
                
                <input
                  type="password"
                  name="confirm-reset-password"
                  id="confirm-password"
                  class="reset-password"
                  placeholder="Confirm New Password"
                />
                
                <button class="submit-btn">
                  <i class="bi bi-check2-circle me-2"></i>Reset Password
                </button>
              </div>
            </form>

            <!-- Success message -->
            <div id="reset-success-div">
              <div class="text-center">
                <div class="success-icon-container mb-4">
                  <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <div class="brand">
                  <p class="forgot-pword-header">Password Reset Successful!</p>
                </div>
                <p>
                  You have successfully reset your password. Please
                  <a href="/">log in</a> to your account to continue.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      const userEmail = "<%= email %>";
      const userId = "<%= id %>";

      const passwordResetForm = document.getElementById("passwordResetForm");
      const passwordResetSuccess = document.getElementById("reset-success-div");
      const passwordInput = document.getElementById("reset-password");
      const strengthMeter = document.querySelector(".strength-meter");

      document.addEventListener("contextmenu", function (e) {
        e.preventDefault();
      });
      
      // Password strength checker
      passwordInput.addEventListener("input", function() {
        const password = this.value;
        let strength = 0;
        
        if (password.length >= 8) strength += 1;
        if (/[A-Z]/.test(password) && /[a-z]/.test(password)) strength += 1;
        if (/[0-9]/.test(password) && /[^A-Za-z0-9]/.test(password)) strength += 1;
        
        strengthMeter.className = "strength-meter";
        if (strength === 1) strengthMeter.classList.add("weak");
        else if (strength === 2) strengthMeter.classList.add("medium");
        else if (strength === 3) strengthMeter.classList.add("strong");
      });
      
      passwordResetForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const submitBtn = document.querySelector(".submit-btn");
        submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Processing...';
        submitBtn.disabled = true;

        await fetch(`/arcms/api/v1/employees/reset-password/${userId}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            password: e.target["reset-password"].value,
            passwordConfirm: e.target["confirm-reset-password"].value,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.status == "failed") {
              submitBtn.innerHTML = '<i class="bi bi-check2-circle me-2"></i>Reset Password';
              submitBtn.disabled = false;
              return alert(data.message);
            }

            passwordResetForm.style.display = "none";
            passwordResetSuccess.style.display = "block";
            console.log(data);
          })
          .catch((err) => {
            submitBtn.innerHTML = '<i class="bi bi-check2-circle me-2"></i>Reset Password';
            submitBtn.disabled = false;
            console.log("ERROR RESETTING PASSWORD:", err);
          });
      });
    </script>
  </body>
</html>